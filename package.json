{
  "name": "role-register",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run build:worker && next dev --turbopack",
    "build": "npm run build:worker && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "build:worker": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "screenshots": "concurrently --success first --kill-others \"DATABASE_PATH=data/fake_role_register.sqlite npm run dev\" \"wait-on http://localhost:3000 && electron scripts/capture-screenshots.js\""
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "drizzle-orm": "^0.44.5",
    "emittery": "^1.2.0",
    "html-react-parser": "^5.2.6",
    "next": "15.5.3",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jsdom": "^25.0.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  }
}
